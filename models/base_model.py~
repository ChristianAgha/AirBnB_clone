#!/usr/bin/python3
'''module: base_model
creates class BaseModel which defines all common attributes/methods
for other classes
'''
from datetime import datetime
import uuid



class BaseModel:
    '''class:  defines all common attributes/methods for other classes
    '''

    def __init__(self):
        '''constructor:
        sets attributes for id and created_at
        '''
        self.id = str(uuid.uuid4())
        self.created_at = str(datetime.now())

    def save(self):
        ''' public method:
        updates current datetime
        '''
        self.updated_at = str(datetime.now())

    def to_json(self):
        ''' public method:
        returns dictionary containing all key/values
        '''
        return (self.__dict__)

    def __str__(self):
        '''print result
        '''
        return ('[{0}] ({1}) {2}'.format(self.__class__.__name__, self.id, self.__dict__))
